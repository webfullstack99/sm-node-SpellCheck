<!DOCTYPE html>
<html>

<head>
    <title>Check spelling</title>
    <link rel="stylesheet" href="./vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/style.css">
</head>

<body>
    <div class="container mt-2">
        <div class="row">
            <% var output = output || 'Waiting for result...' %>
            <% var input = input || '' %>
            <!-- INPUT -->
            <div class="col-lg-6">
                <p class="lead">Input</p>
                <form method="post" action="" id="main-form">
                    <textarea name="input" placeholder="" id="area-input" class="form-control"
                        rows="5"><%=input%></textarea>
                    <button type="button" name="check-spelling" id="paste-btn"
                        class="btn btn-secondary mt-2">Paste</button>
                    <button type="button" name="check-spelling" id="check-btn"
                        class="btn btn-primary mt-2">Check</button>
                    <p id="message" class="mt-3 text-dark lead d-none">Please type input first!</p>
                </form>
            </div>

            <!-- OUTPUT -->
            <div class="col-lg-6 mt-4 mt-lg-0">
                <p class="lead">Spelling result</p>
                <p class="result-container border border-secondary p-2"> <%-output%> </p>
            </div>
        </div>
    </div>

    <script src="./vendor/jquery/jquery-3.4.1.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="./js/custom.js"></script>

</body>

</html>